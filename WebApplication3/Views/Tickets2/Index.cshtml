@model IEnumerable<WebApplication3.Models.Ticket>

@{
    ViewData["Title"] = "Квитки";
}

<h1>Квитки за потягом</h1>
@if (User.IsInRole("admin"))
{
    <p>
    <a asp-action="Create">Create New</a>
</p>}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TicketPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBuying)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlaceNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carriage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PIdNavigation)
            </th>
            @if (User.IsInRole("admin"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.Ps)
            </th>}
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TicketPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBuying)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carriage.CarriageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PIdNavigation.PId)
            </td>
                @if (User.IsInRole("admin"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Ps.PsName)
            </td>}
            <td>
                    @if (User.IsInRole("admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.TicketId">Edit</a>
                    }
                    @if (User.IsInRole("admin"))
                    {
                        <a asp-action="Details" asp-route-id="@item.TicketId">Details</a>
                    }
                    @if (User.IsInRole("admin"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.TicketId">Delete</a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
